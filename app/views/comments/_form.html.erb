<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.text_field :commenter, class: 'form-control', placeholder: "Commenter" %>
  </p>
  <p>
    <%= f.text_area :body, class: 'form-control', rows: '3', placeholder: "Body" %>
  </p>
  <p>
    <%= f.submit class: 'btn btn-primary' %>
  </p>
<% end %>
