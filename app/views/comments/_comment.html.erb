<div class="row">
  <div class="commenter col-md-12">
    <p>
      <%= comment.commenter %>
    </p>
  </div>
</div>


<div class="row">
  <div class="comment col-md-12">
    <p>
      <%= comment.body %>
    </p>
    <p>
      <%= link_to 'Destroy Comment', [comment.article, comment],
                   method: :delete,
                   data: { confirm: 'Are you sure?' },
                   class: 'btn btn-default' %>
    </p>
  </div>
</div>
