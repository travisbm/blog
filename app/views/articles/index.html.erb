<h1>Listing articles</h1>

<%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-default' %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-default' %></td>
      <td><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-default' %></td>
    </tr>
  <% end %>
</table>
