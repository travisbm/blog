<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 article">
      <h1>Listing articles</h1>

      <%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-8 col-md-offset-2 article-card">
          <h3><%= article.title %></h3>
          <div class="row">
            <div class="col-md-8">
              <p class="well"><%= article.text %></p>
            </div>
            <div class="col-md-4" id="buttons">
              <%= link_to 'Show', article_path(article), class: 'btn btn-default btn-sm' %>
              <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-default btn-sm' %>
              <%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-default btn-sm' %>
            </div>
          </div>
      </div>
    <%end%>
  </div>
</div>
